<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/ONE"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">
<Button
android:id="@+id/btn7"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentStart="true"
android:layout_alignParentLeft="true"
android:layout_centerVertical="true"
android:layout_marginStart="11dp"
android:layout_marginLeft="14dp"
android:text="7" />
    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btn7"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_toEndOf="@id/btn7"
        android:layout_toRightOf="@id/btn7"
        android:text="8" />
    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btn8"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_toEndOf="@id/btn8"
        android:layout_toRightOf="@id/btn8"
        android:text="9" />
    <Button
        android:id="@+id/btndeviation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btn9"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_toEndOf="@id/btn9"
        android:layout_toRightOf="@id/btn9"
        android:text="/" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn7"
        android:layout_alignLeft="@id/btn7"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="4" />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn8"
        android:layout_alignLeft="@id/btn8"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="5" />
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn9"
        android:layout_alignLeft="@id/btn9"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="6" />
    <Button
        android:id="@+id/btnmultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btndeviation"
        android:layout_alignLeft="@id/btndeviation"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="*" />
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        android:layout_alignLeft="@id/btn4"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="3" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn5"
        android:layout_alignLeft="@id/btn5"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="2" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn6"
        android:layout_alignLeft="@id/btn6"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="1" />
    <Button
        android:id="@+id/btnaddition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnmultiply"
        android:layout_alignLeft="@id/btnmultiply"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="+" />
    <Button
        android:id="@+id/btnclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn3"
        android:layout_alignLeft="@id/btn3"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="CLEAR" />
    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn2"
        android:layout_alignLeft="@id/btn2"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="0" />
    <Button
        android:id="@+id/btnpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:layout_alignLeft="@id/btn1"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="." />
    <Button
        android:id="@+id/btnequal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnaddition"
        android:layout_alignLeft="@id/btnaddition"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="=" />
</RelativeLayout>

